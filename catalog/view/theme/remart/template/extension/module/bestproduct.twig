<div class="bestseller onspro next-prevb">
  <div class="head-t"><h4 class="heading"><svg width="15px" height="15px"><use xlink:href="#star"></use></svg><span>{{bestpro_title}}</span></h4><hr></div>
{% set temp = 0 %}
{% set setCol = 3  %}
<div class="row">
  <div id="bestleft" class="owl-theme owl-carousel">
 {% for product in products %}
        {% set temp = temp + 1 %}

        {% if temp % setCol == 1 %}
            <div class="multi-row">
        {% endif %}
<!-- writ code Here -->
  <div class="product-layout col-xs-12">
    <div class="product-thumb transition">
      <div class="image col-sm-5 col-lg-5 col-xs-4"><a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive center-block" /></a>
          <!-- Webiarch Images Start -->
                 {% set t = 0 %}
                  {% for more_image in product.more_images %}
                  {% for pop in more_image %}
                  {% if t == 0 %}
                    <a href="{{ product.href }}"><img src="{{ pop.popup_more }}" class="img-responsive second-img" alt="hover image"/></a>
                  {% set t = t + 1 %}
                    {% endif %}

                  {% endfor %}
                  {% endfor %}
          <!-- End -->
      </div>
     <div class="caption text-left col-sm-7 col-lg-7 col-xs-8 on_sale">
       <h4  class="protitle"><a href="{{ product.href }}">{{ product.name }}</a></h4>

      {% if product.rating %}
          <div class="rating">
            {% for i in 1..5 %}
            {% if product.rating < i %}
            <span class="fa fa-stack">
              <i class="fa fa-star-o fa-stack-2x"></i>
            </span>
            {% else %}
            <span class="fa fa-stack">
              <i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i>
            </span>
            {% endif %}
          {% endfor %}</div>{% else %}
          <div class="rating">{% for i in 1..5 %}
          <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span>
          {% endfor %}
        </div>
        {% endif %}
       
         {% if product.price %}
        <div class="price">
          {% if not product.special %}
          {{ product.price }}
          {% else %}
          <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span>
          {% endif %}
         {#  {% if product.tax %}
          <span class="price-tax">{{ text_tax }} {{ product.tax }}</span>
          {% endif %} #}
        </div>
        {% endif %}
        {# <p>{{ product.description }}</p> #}

      </div>
  </div>
  </div>
<!-- writ code Here End -->
 {% if temp % setCol == 0 %}
            </div>
        {% endif %}

  {% endfor %}

  {% if products|length % setCol != 0 %}
        </div>
    {% endif %}
</div>
</div>
</div>
<script type="text/javascript">
    $(document).ready(function() {
    $("#bestleft").owlCarousel({
    itemsCustom : [
    [0, 1],
    [480, 2],
    [768, 1],
    [992, 1],
    [1200, 2],
    [1410, 2],
    [1600, 2]
    ],
      // autoPlay: 1000,
      navigationText: ['<i class="fa fa-angle-left" aria-hidden="true"></i>', '<i class="fa fa-angle-right" aria-hidden="true"></i>'],
      navigation : true,
      pagination:false
    });
    });
</script>