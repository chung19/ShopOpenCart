{{ header }}
<div id="product-manufacturer" class="container cleft fnb">
 
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-8 col-md-9 col-xs-12 colright' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">

 <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>

      {{ content_top }}
      <h1 class="co-heading">{{ heading_title }}</h1>
      {% if products %}
      <div class="brand">
      <div class="appres"></div>
     <div class="row cate-border">
            <div class="col-md-2 col-sm-3 col-xs-4 lgrid">
                <div class="btn-group-sm">
                    <button type="button" id="list-view" class="btn listgridbtn" data-toggle="tooltip" title="{{ button_list }}">
                     <svg width="20px" height="20px"><use xlink:href="#clist"></use> </svg>
                    </button>
                    <button type="button" id="grid-view" class="btn listgridbtn" data-toggle="tooltip" title="{{ button_grid }}">
                       <svg width="18px" height="18px"><use xlink:href="#cgrid"></use> </svg>
                    </button>
                </div>
            </div>
            <div class="col-lg-4 col-md-5 col-sm-6 col-xs-8 hidden-md hidden-sm ct">
                <a href="{{ compare }}" id="compare-total" class="btn btn-link">{{ text_compare }}</a>
            </div>
            <div class="col-lg-3 col-md-5 col-xs-4 col-sm-5 catesort">
                <div class="input-group input-group-sm select-input">
                    <label class="input-group-addon" for="input-sort">{{ text_sort }}</label>
                  
                    <select id="input-sort" class="form-control" onchange="location = this.value;">
                        {% for sorts in sorts %}
                            {% if sorts.value == '%s-%s'|format(sort, order) %}
                                <option value="{{ sorts.href }}" selected="selected">{{ sorts.text }}</option>
                            {% else %}
                                <option value="{{ sorts.href }}">{{ sorts.text }}</option>
                            {% endif %}
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="col-lg-3 col-md-5 col-xs-4 col-sm-4 catesort">
                <div class="input-group input-group-sm select-input">
                    <label class="input-group-addon" for="input-limit">{{ text_limit }}</label>
                    <select id="input-limit" class="form-control" onchange="location = this.value;">
                        {% for limits in limits %}
                            {% if limits.value == limit %}
                                <option value="{{ limits.href }}" selected="selected">{{ limits.text }}</option>
                            {% else %}
                                <option value="{{ limits.href }}">{{ limits.text }}</option>
                            {% endif %}
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>

      <div class="row cpagerow rless"> {% for product in products %}
        <div class="product-layout product-list col-xs-12 cless">
          <div class="product-thumb transition">
            <div class="zi">
                <div class="image"><a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive center-block" /></a>
                        <!-- Webiarch Images Start -->
                                  {% set t = 0 %}
                                    {% for webi_image in product.webi_images %}
                                    {% if t == 0 %}
                                     <a href="{{ product.href }}"><img src="{{ webi_image.popup }}" class="img-responsive second-img" alt="hover image"/></a>
                                    {% set t = t + 1 %}
                                    {% endif %}
                                  {% endfor %}
                  <!-- Webiarch Images End -->
                  {% if product.price %}
                    {% if product.special %}
                          <h1 class="product-flag newpros"><span>sale</span></h1>
                    {% endif %}
                {% endif %}
                       {% if product.tag_per  %}<span class="sale">{{ product.tag_per }}%</span>{% endif %}

                </div>

      <div class="caption">
        <div class="cap">
       
        <div class="opbtn">

          <h4  class="col-xs-12 protitle"><a href="{{ product.href }}">{{ product.name }}</a></h4>


         <div class="rat">
        {% if product.rating %}
          <div class="rating">
            {% for i in 1..5 %}
            {% if product.rating < i %}
            <span class="fa fa-stack">
              <i class="fa fa-star-o fa-stack-2x"></i>
            </span>
            {% else %}
            <span class="fa fa-stack">
              <i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i>
            </span>
            {% endif %}
          {% endfor %}</div>{% else %}
          <div class="rating text-center">{% for i in 1..5 %}
          <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span>
          {% endfor %}</div>
        {% endif %}
      </div>

       <p class="catlist-des">{{ product.description }}</p>

        {% if product.price %}
        <div class="price">
          {% if not product.special %}
          {{ product.price }}
          {% else %}
          <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span>
          {% endif %}
         {#  {% if product.tax %}
          <span class="price-tax">{{ text_tax }} {{ product.tax }}</span>
          {% endif %} #}
        </div>
        {% endif %}

      </div>


        </div>

        {# <p>{{ product.description }}</p> #}      
      
        <div class="button-group">
      <div class="absbtn">
        <div class="wish"><button type="button" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}');" class="bwish"><svg width="19px" height="19px"><use xlink:href="#pwish"></use></svg>{# {{ button_wishlist }} #}</button></div>
        <div class="view"><button type="button" title="{{ button_compare }}" onclick="compare.add('{{ product.product_id }}');" class="bcom"><svg width="16px" height="16px"><use xlink:href="#pcom"></use></svg>{# {{ button_compare }} #}</button></div>
       <div class="bquickv" title="Quickview"> </div> 
        <button type="button"  onclick="cart.add('{{ product.product_id }}');" class="cartb"><svg><use xlink:href="#pcart"></use></svg><span>
      {# {{ button_cart }} #}</span></button>
      </div>
     
    </div>

    <div class="extra-button">
      <button type="button"  onclick="cart.add('{{ product.product_id }}');" class="cartb"><svg width="18px" height="17px"><use xlink:href="#pcart"></use></svg><span>
      {{ button_cart }}</span></button>
        <div class="bquickv" title="Quickview"> </div> 
    </div> 

  </div>

      
    </div>
        </div>
      </div>
        {% endfor %} 
      </div>
     <div class="row pagi">
        <div class="col-sm-6 col-xs-6 text-left">{{ pagination }}</div>
        <div class="col-sm-6 col-xs-6 text-right tot">{{ results }}</div>
      </div>
      {% else %}
      <p>{{ ctext_empty }}</p>
      <div class="buttons">
        <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
      </div>
      {% endif %}
    </div>
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}