{{ header }}
<div id="account-forgotten" class="container acpage">
        
  <div class="row">{{ column_left }}
     {% if column_left and column_right %}
    {% set class = 'col-sm-8 col-md-6  col-xs-12 colright accw' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-8 col-md-9 col-xs-12 colright' %}
    {% else %}
    {% set class = 'col-xs-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">
       {% if error_warning %}
  <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}<button type="button" class="close" data-dismiss="alert">&times;</button></div>
  {% endif %}
      {{ content_top }}
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul> 
<div class="infobg">
      <!-- <h1 class="heading">{{ cheading_title }}</h1> -->
       <div class="head-t">
          <h4 class="heading"><span>{{ cheading_title }}</span></h4><hr>
      </div>
      <p>{{ text_email }}</p>
      <form action="{{ action }}" method="post" enctype="multipart/form-data" class="form-horizontal">
        <fieldset>
          <!-- <legend>{{ text_your_email }}</legend> -->
          <div class="form-group required">
            <label class="col-lg-3 col-xs-12 control-label" for="input-email">{{ entry_email }}</label>
            <div class="col-lg-9 col-xs-12">
              <input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control" />
            </div>
          </div>
        </fieldset>
        <div class="buttons clearfix">
          <div class="pull-left"><a href="{{ back }}" class="btn btn-primary">{{ button_back }}</a></div>
          <div class="pull-right">
            <input type="submit" value="{{ button_continue }}" class="btn btn-primary" />
          </div>
        </div>
      </form>
      {{ content_bottom }}</div></div>
    {{ column_right }}</div>
</div>
{{ footer }}