{{ header }}
<div id="account-order" class="container acpage">

  <div class="row">{{ column_left }}
     {% if column_left and column_right %}
    {% set class = 'col-sm-8 col-md-6  col-xs-12 colright accw' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-8 col-md-9 col-xs-12 colright' %}
    {% else %}
    {% set class = 'col-xs-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
<div class="infobg">
      <!-- <h1 class="heading">{{ cheading_title }}</h1> -->
      <div class="head-t">
          <h4 class="heading"><span>{{ cheading_title }}</span></h4><hr>
      </div>
      {% if orders %}
      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <td class="text-right">{{ column_order_id }}</td>
              <td class="text-left">{{ column_customer }}</td>
              <td class="text-right">{{ column_product }}</td>
              <td class="text-left">{{ column_status }}</td>
              <td class="text-right">{{ column_total }}</td>
              <td class="text-left">{{ column_date_added }}</td>
              <td></td>
            </tr>
          </thead>
          <tbody>
           {% for order in orders %}
            <tr>
              <td class="text-right valign">#{{ order.order_id }}</td>
              <td class="text-left valign">{{ order.name }}</td>
              <td class="text-right valign">{{ order.products }}</td>
              <td class="text-left valign">{{ order.status }}</td>
              <td class="text-right valign">{{ order.total }}</td>
              <td class="text-left valign">{{ order.date_added }}</td>
              <td class="text-right valign"><a href="{{ order.view }}" data-toggle="tooltip" title="{{ button_view }}" class="btn btn-info"><i class="fa fa-eye"></i></a></td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-sm-6 text-left">{{ pagination }}</div>
        <div class="col-sm-6 text-right">{{ results }}</div>
      </div>
      {% else %}
      <p>{{ ctext_empty }}</p>
      {% endif %}
      <div class="buttons clearfix">
        <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
      </div>
      {{ content_bottom }}</div></div>
    {{ column_right }}</div>
</div>
{{ footer }}
