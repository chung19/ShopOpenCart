<div class="bestsell onspro next-prevb">
    <div class="head-t"><h4 class="heading"><span>{{onsale_title}}</span></h4></div>
{% set temp = 0 %}
{% set setCol = 6 %}
  <div id="onsale" class="owl-theme owl-carousel">
 {% for product in products %}
         {% set temp = temp + 1 %}

        {% if temp % setCol == 1 %}
            <div class="multi-row">
        {% endif %}
  <div class="product-layout col-xs-12">
    <div class="product-thumb transition">
      <div class="image col-sm-5 col-lg-5 col-xs-4"><a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive center-block" /></a>
          <!-- Webiarch Images Start -->
                 {% set t = 0 %}
                  {% for more_image in product.more_images %}
                  {% for pop in more_image %}
                  {% if t == 0 %}
                    <a href="{{ product.href }}"><img src="{{ pop.popup_more }}" class="img-responsive second-img" alt="hover image"/></a>
                  {% set t = t + 1 %}
                    {% endif %}

                  {% endfor %}
                  {% endfor %}
          <!-- End -->
      </div>
     <div class="caption text-left col-sm-7 col-lg-7 col-xs-8 on_sale">
      
      <h4  class="protitle"><a href="{{ product.href }}">{{ product.name }}</a></h4>
        
         {% if product.price %}
        <div class="price">
          {% if not product.special %}
          {{ product.price }}
          {% else %}
          <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span>
          {% endif %}
         {#  {% if product.tax %}
          <span class="price-tax">{{ text_tax }} {{ product.tax }}</span>
          {% endif %} #}
        </div>
        {% endif %}
        {# <p>{{ product.description }}</p> #}

      </div>
     


    </div>
  </div>
   {% if temp % setCol == 0 %}
            </div>
        {% endif %}
  {% endfor %}

  {% if products|length % setCol != 0 %}
    <!-- <h1>hii</h1> -->
        </div>
    {% endif %}
</div>
</div>
<script type="text/javascript">
    $(document).ready(function() {
    $("#onsale").owlCarousel({
    itemsCustom : [
    [0, 1],
    [480, 2],
    [576, 2],
    [768, 1],
    [992, 1],
    [1200, 1]
    ],
      // autoPlay: 1000,
      navigationText: ['<i class="fa fa-angle-left" aria-hidden="true"></i>', '<i class="fa fa-angle-right" aria-hidden="true"></i>'],
      navigation : true,
      pagination:false
    });
    });
</script>