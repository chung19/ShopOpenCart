{{ header }}
<div id="account-address" class="container acpage">
        

  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-8 col-md-6  col-xs-12 colright accw' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-8 col-md-9 col-xs-12 colright' %}
    {% else %}
    {% set class = 'col-xs-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">
        {% if success %}
  <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }} <button type="button" class="close" data-dismiss="alert">&times;</button></div>
  {% endif %}
  {% if error_warning %}
  <div class="alert alert-warning"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} <button type="button" class="close" data-dismiss="alert">&times;</button></div>
  {% endif %}
      {{ content_top }}
      <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
<div class="infobg">
      <div class="head-t">
          <h4 class="heading"><span>{{ text_address_book }}</span></h4><hr>
      </div>
      {% if addresses %}
      <div class="row">
          {% for result in addresses %}
         <div class="col-lg-6 col-md-12 col-xs-12">
          <div class="addlist">
            <div>{{ result.address }}</div>
           <div class="addl"><a href="{{ result.update }}" class="btn btn-info">{{ button_edit }}</a> &nbsp; <a href="{{ result.delete }}" class="btn btn-primary">{{ button_delete }}</a></div>
        </div></div>
          {% endfor %}

      </div>
      {% else %}
      <p>{{ ctext_empty }}</p>
      {% endif %}
      <div class="buttons clearfix">
        <div class="pull-left"><a href="{{ back }}" class="btn btn-primary">{{ button_back }}</a></div>
        <div class="pull-right"><a href="{{ add }}" class="btn btn-primary">{{ button_new_address }}</a></div>
      </div>
      {{ content_bottom }}</div></div>
    {{ column_right }}</div>
</div>
{{ footer }}