<div class="next-prevb onspro">
     <div class="container">
<div class="box blog_webi">
        <div class="head-t">
            <h4 class="heading"><svg width="15px" height="15px"><use xlink:href="#star"></use></svg><span>{{ heading_title }}</span></h4><hr>
        </div>
        <div class="box-content row">
            <div class="box-product">
                <div id="blog" class="owl-carousel owl-theme">
                {% for blog in blogs %}
                <div class="product-b col-xs-12">
                    <div class="product-block">
                        {% if blog.image %}
                            <div class="blog-left col-sm-5 col-xs-12">
                                <div class="webi-blog-image">
                                    <img src="{{ blog.image }}" alt="{{ heading_title }}" title="{{ heading_title }}" class="img-responsive" />
                                    <div class="blog-post-image-hover"> </div>
                                    <div class="webi_post_hover">
                                        <div class="blog-ic">
                                        <!-- <a class="icon zoom" title="Click to view Full Image " href="{{ blog.image }}" data-lightbox="example-set"><i class="fa fa-search-plus" aria-hidden="true"></i></a> -->
                                        <a class="icon readmore_link" title="all blog" href="{{ all_blogs }}"><i class="fa fa-link"></i></a>
                                        </div>
                                    </div>
                                </div>
                               
                            </div>
                        {% endif %}                           
                        <div class="blog-right col-sm-7 col-xs-12">
                            <div class="bs">
                                <div class="blogdt">
                                <h4><a href="{{ blog.href }}">{{ blog.title }}</a></h4>
                                 <div class="bdate"><span class="date-time"><svg width="15px" height="15px"><use xlink:href="#cal"></use></svg>{{ blog.date_added }}</span>
                                <div class="write-comment"><span><i class="fa fa-comments-o" aria-hidden="true"></i><a href="{{ blog.href }}">{{ blog.total_comments }} {{ entry_comment }}</a></span></div></div>
                                <div class="bl">{{ blog.description }}</div>
                            </div> 

                                
                                <!--  <div class="read_link"> <a href="{{ blog.href }}">{{ text_read_more }}</a> </div> -->
                                    <div class="read-more">
                                        <a class="rd-mr" href="{{ blog.href }}">
                                            {{ text_read_more }}
                                        </a>
                                    </div>
                                
                            </div>
                        </div>                       
                    </div>
                </div>   
                {% endfor %}            
            </div>
            </div>
    </div>
</div>
</div>
</div>
<script type="text/javascript">
    $(document).ready(function() {
    $("#blog").owlCarousel({
    itemsCustom : [
    [0, 1],
    [600, 2],
    [768, 2],
    [992, 2],
    [1200, 2],
    [1410, 2]
    ],
      // autoPlay: 1000,
      navigationText: ['<i class="fa fa-angle-left"></i>', '<i class="fa fa-angle-right"></i>'],
      navigation : true,
      pagination:false
    });
    });
</script>
